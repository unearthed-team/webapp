extends layout

block body
  
  .container
    h1#title Geomantix 
      small Field Application
    br
  #map

  div
    .modal.fade#createZone
      .modal-dialog(style="z-index: 10000")
        .modal-content
          .modal-header
            button.close(aria-label="Close", type="button", data-dismiss="modal")
              span(aria-hidden="true") &times
            h4.modal-title Add Zone
          .modal-body
            .container-fluid
              form.form-horizontal#new-zone
                .form-group
                  label.col-sm-2.control-label(for="form-tag") Type
                  .col-sm-10
                    select#form-tag.form-control(name="tag")
                      option(value="hazard") Hazard
                .form-group
                  label.col-sm-2.control-label(for="form-severity") Severity
                  .col-sm-10
                    select#form-severity.form-control(name="severity")
                      option(value="0") Low
                      option(value="1") Medium
                      option(value="2") High
                      option(value="3") Critical
                .form-group
                  label.col-sm-2.control-label(for="form-description") Description
                  .col-sm-10
                    textarea#form-description.form-control(name="description", rows="3")
                input#form-coords(type="hidden", name="coords")
          .modal-footer
            button.btn.btn-default(type="button", data-dismiss="modal") Close
            button.btn.btn-primary(type="button", onclick="submitZone()") Save Zone
          
